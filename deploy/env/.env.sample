APP_ENV=prod

# Frontend build-time API URL (used by docker-compose.prod.yml build args)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Backend
DB_URL=postgresql+psycopg://app:app@db:5432/app
JWT_SECRET=change_this_to_a_long_random_value
JWT_EXPIRE_MIN=20

# Allow exactly the frontend origins you will use.
# Add your LAN IP origin for mobile testing, e.g. http://192.168.0.25:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optional bootstrap admin
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=change_this_password

# Optional operational settings
USDT_ADMIN_ADDRESS=
USDT_ADMIN_ADDRESS_TRON=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
POLYGONSCAN_API_KEY=
